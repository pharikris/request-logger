pipeline {
  agent any

  stages {
    
    stage('Build Image') {
      steps {
      sh "docker build --no-cache --build-arg='GIT_COMMIT_ID=${env.GIT_COMMIT}' -t pharikris/request-logger:${env.GIT_COMMIT} -f Dockerfile-multi ."
      sh "docker tag pharikris/request-logger:${env.GIT_COMMIT} pharikris/request-logger:latest"
      }
    }
    
  }

  post {
    success {
      withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
        sh "docker login -u ${USERNAME} -p ${PASSWORD}"
        sh "docker push pharikris/request-logger:${env.GIT_COMMIT}"
        sh "docker push pharikris/request-logger:latest"
        sh "kubectl get deploy logger || kubectl create deploy logger --image pharikris/request-logger:${env.GIT_COMMIT}"
        sh "kubectl set image deploy logger request-logger=pharikris/request-logger:${env.GIT_COMMIT}"
        sh "kubectl set env deploy logger  BUILD_ID=${env.BUILD_ID}"
      }
    }
  }
}
